<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <template id="thank_you_page_template" name="Thank You Page">
      <t t-call="website.layout">
        <div class="container text-center py-5">
          <div class="row justify-content-center">
            <div class="col-lg-8 col-md-10">
              <div class="card border-0 shadow-lg rounded-4">
                <div class="card-body p-5">
                  <div class="mb-4">
                    <i class="fa fa-check-circle text-success" style="font-size: 80px;"></i>
                  </div>
                  <h2 class="fw-bold text-success mb-3">Thank You!</h2>
                  <p class="text-muted fs-5">
                    Your registration has been received successfully.
                    Our team will review your details and contact you shortly.
                  </p>

                  <hr class="my-4"/>

                  <div class="mt-4">
                    <a href="/" class="btn btn-outline-primary btn-lg rounded-pill px-4 me-2 shadow-sm">
                      <i class="fa fa-home me-2"></i> Back to Home
                    </a>
                    <a href="/web/login" class="btn btn-primary btn-lg rounded-pill px-4 shadow-sm">
                      <i class="fa fa-sign-in-alt me-2"></i> Go to Login
                    </a>
                  </div>
                </div>
              </div>
              <div class="text-muted mt-5 small">
                Â© <t t-esc="datetime.datetime.now().year"/> Your Company. All rights reserved.
              </div>
            </div>
          </div>
        </div>
      </t>
    </template>

    <!-- Website page record -->
    <record id="thank_you_page_record" model="website.page">
      <field name="url">/thank-you</field>
      <field name="is_published">True</field>
      <field name="view_id" ref="thank_you_page_template"/>
    </record>

  </data>
</odoo>
